# Interface
LastToolbarVisible=TRUE
LastMenubarVisible=FALSE
LastStatusbarVisible=TRUE
LastLocationBar=ThunarLocationButtons

# Comportement
LastSortColumn=THUNAR_SORT_BY_NAME
LastSortOrder=GTK_SORT_ASCENDING
LastShowHidden=TRUE
MiscFoldersOpenInTabs=TRUE
MiscConfirmMoveToTrash=FALSE
MiscConfirmNonUndoableActions=TRUE
MiscSingleClick=FALSE
MiscSingleClickTimeout=300

# Dossiers
MiscRememberGeometry=TRUE
MiscAlwaysShowTabs=TRUE
MiscMaxRecentItems=10
DefaultWorkingDirectory=/home/sabi

# Performances
MiscThumbnailMode=THUNAR_THUMBNAIL_MODE_ALWAYS
MiscThumbnailMaxFileSize=104857600
MiscShowThumbnails=TRUE
MiscFolderItemCount=THUNAR_FOLDER_ITEM_COUNT_ALWAYS
MiscParallelCopyMode=THUNAR_PARALLEL_COPY_MODE_ALWAYS

# Interactions
MiscMiddleClickInTab=TRUE
MiscTransferMode=THUNAR_TRANSFER_MODE_ASK
MiscZoomLevel=THUNAR_ZOOM_LEVEL_NORMAL

# Recherche
MiscRecursiveSearch=TRUE
MiscCaseSensitiveSearch=FALSE
