# Modern Yazi config avec fallbacks

[manager]
ls_command = "sh -c 'command -v exa >/dev/null && exa --icons --group-directories-first "$@" || ls "$@"' ls"
show_hidden = true

[preview]
text = "sh -c 'command -v bat >/dev/null && exec bat --style=plain --color=always --paging=never "$@" || exec cat "$@"' preview"
image = "sh -c 'command -v viu >/dev/null && exec viu -b "$@" || exec wezterm imgcat "$@"' preview"
pdf = "sh -c 'command -v pdftotext >/dev/null && pdftotext "$@" - || echo \"pdftotext non install√©\"' preview"

theme = "mocha/catppuccin-mocha-green"

[statusbar]
left = "{cwd} {mode}"
right = "{total} files | {selected} selected"

[keymap]
open_terminal = "ctrl+t"
toggle_hidden = "ctrl+h"
preview = "space"
quit = "q"
[theme]
theme = "mocha/catppuccin-mocha-blue"
