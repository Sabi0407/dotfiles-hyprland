{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "ignore-gtk-theme": true,
  "cssPriority": "user",
  "style": "/home/sabi/.config/swaync/style.css",
  "control-center-width": 420,
  "control-center-margin-top": 18,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 18,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-window-width": 420,
  "notification-icon-size": 48,
  "notification-body-image-height": 240,
  "notification-body-image-width": 240,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-height": 640,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "buttons-grid",
    "volume",
    "backlight",
    "battery",
    "network",
    "mpris",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "\ud83d\uddd1 Effacer"
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 10
    },
    "volume": {
      "label": "\uf027",
      "step": 5,
      "show-percentage": true
    },
    "backlight": {
      "label": "\udb80\udcde",
      "step": 5,
      "device": "intel_backlight",
      "subsystem": "backlight"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "\uf1eb",
          "command": "bash -c 'swaync-client -t && exec nm-connection-editor'",
          "tooltip": "NetworkManager"
        },
        {
          "label": "\uf294",
          "command": "bash -c 'swaync-client -t && exec blueman-manager'",
          "tooltip": "Bluetooth"
        },
        {
          "label": "\udb80\udc9b",
          "command": "~/.config/Scripts/toggle_dnd.sh",
          "tooltip": "Ne pas d\u00e9ranger"
        },
        {
          "label": "\udb83\ude08",
          "command": "bash -c 'swaync-client -t && pactl set-sink-mute @DEFAULT_SINK@ toggle'",
          "tooltip": "Volume Mute"
        },
        {
          "label": "\udb80\udf6c",
          "command": "bash -c 'swaync-client -t && ~/.config/Scripts/toggle_mic.sh'",
          "tooltip": "Microphone"
        },
        {
          "label": "\udb82\udcc6",
          "command": "bash -c 'swaync-client -t && exec nwg-look'",
          "tooltip": "Theme"
        }
      ]
    },
    "battery": {
      "critical": 15,
      "low": 25,
      "show-percentage": true
    },
    "network": {
      "label-wifi": "\udb82\udd28",
      "label-ethernet": "\udb80\ude00",
      "label-disconnected": "\udb82\udd2d",
      "show-type": true,
      "show-connected-devices": true
    },
    "notifications": {}
  }
}
