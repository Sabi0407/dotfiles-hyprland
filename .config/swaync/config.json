{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "center",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "application",
  "style": "/home/sabi/.config/swaync/style.css",
  "control-center-width": 420,
  "control-center-margin-top": 18,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-window-width": 380,
  "notification-icon-size": 48,
  "notification-body-image-height": 240,
  "notification-body-image-width": 240,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-height": 640,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "buttons-grid",
    "volume",
    "backlight",
    "mpris",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 10
    },
    "volume": {
      "label": "",
      "step": 5
    },
    "backlight": {
      "label": "󰃞",
      "step": 5,
      "device": "intel_backlight",
      "subsystem": "backlight"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "",
          "command": "nm-connection-editor && swaync-client -t",
          "tooltip": "NetworkManager"
        },
        {
          "label": "",
          "command": "/usr/bin/blueman-manager && swaync-client -t",
          "tooltip": "Bluetooth"
        },
        {
          "label": "󰂛",
          "command": "swaync-client -d",
          "type": "toggle",
          "tooltip": "DND"
        },
        {
          "label": "󰸈",
          "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle && swaync-client -t",
          "tooltip": "Volume Mute"
        },
        {
          "label": "󰣆",
          "command": "nwg-look && swaync-client -t",
          "tooltip": "Theme"
        }
      ]
    }
  }
}
