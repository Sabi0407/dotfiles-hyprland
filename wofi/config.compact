# ── Wofi ultra-compact ──────────────────────────────────────────
show=drun
location=center
width=500
height=300
prompt=
term=kitty

# Recherche / UX
insensitive=true
hide_scroll=true
no_actions=true
matching=fuzzy

# Icônes / images
allow_images=true
image_size=20

# Colonnes pour un affichage très compact
columns=3

# Apparence générale
opacity=0.98

# GTK
gtk-application-prefer-dark-theme=true
gtk-theme-name=Adwaita
gtk-icon-theme-name=Adwaita
gtk-font-name=Inter 10
